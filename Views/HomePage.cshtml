@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.HomePage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@{
    Layout = null; // Tạm thời chưa dùng Master Page
}

<!DOCTYPE html>
<html>
<head>
    <title>@Model.MainTitle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="p-5 mb-4 bg-light rounded-3">
            <div class="container-fluid py-5">
                <h1 class="display-5 fw-bold">@Model.MainTitle</h1>
                
                <div class="col-md-8 fs-4">
                    @Html.Raw(Model.BodyText)
                </div>
                
                <hr/>
                <p>Created by a .NET Full-stack Developer exploring Umbraco v14.</p>
            </div>
        </div>
    </div>
</body>
</html>